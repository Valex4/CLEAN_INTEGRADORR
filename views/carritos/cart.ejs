    <div class="container">
        <br><br><br>

        <div class="container"  style="width:400px">
            <br>
            <h1>Carrito de compras</h1>
            <br>
        </div>
    <table class="table table-light">
        <thead class="thead-light">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>cantidad</th>
                <th>Acciones</th>

            </tr>
        </thead>
        <tbody>
            <% for( let product = 0; product < products.length; product++ ) { %>
                <tr>
                    <td> <%= product +1 %> </td>
                    <td> <%=products[product].nombreProducto %></td>
                   
                    <td>$ <%=products[product].precioProducto %></td>
                    <td> <%=products[product].cantidad %></td>
                    <td> 
                        
                        <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                            <form class="form-inline" method="post" action="/carritos/cart/<%= products[product].id_carrito %> ">
                                <button type="submit"class="noselect"><span class="text">Eliminar</span><span class="icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M24 20.188l-8.315-8.209 8.2-8.282-3.697-3.697-8.212 8.318-8.31-8.203-3.666 3.666 8.321 8.24-8.206 8.313 3.666 3.666 8.237-8.318 8.285 8.203z"></path></svg></span> </button>
                            </form>
                        </div>
                    </td>
                </tr>
                
                
            <% } %>
        </tbody>
        </table>
        <br>
        
    </div>
    <div class="container"  style="width:198px">
        <br>
        <h2 style="text-align: center;">Monto total: </h2>
        <h2 style="text-align: center;">  $<%= total  %> </h2>
        <button style="width: 170px;" class="btn btn-success" onclick="location.href='/carritos/pagos'">Pagar</button>
        <br>
        <br>
    </div>
</body>
