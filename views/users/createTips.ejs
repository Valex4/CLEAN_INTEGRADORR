<body>
    <h2>¡Añade algun tip de cuidado!</h2>
    <form method="post" action="/users/createTips">
        <div class="form-group">
            <label for="my-input">Titulo: </label>
            <input id="my-input" class="form-control" type="text" name="titulo">
        </div>
    
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Tips de Cuidado</label>
            <textarea class="form-control" name="tips" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-secondary">Enviar Tips</button>
    </form>
</body>
